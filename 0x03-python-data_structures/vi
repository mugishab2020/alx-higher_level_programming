#!/usr/bin/python3
def add_tuple(tuple_a=(), tuple_b=()):
    a = tuple_a[:2] + (0, 0)  # Pad tuple_a with zeros if it's smaller than 2
    b = tuple_b[:2] + (0, 0)  # Pad tuple_b with zeros if it's smaller than 2
    result = (a[0] + b[0], a[1] + b[1])  # Perform element-wise addition
    return result
